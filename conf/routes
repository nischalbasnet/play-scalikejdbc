# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET          /assets/*file                                      controllers.Assets.versioned(path="/public", file: Asset)

GET          /test                                              controllers.TestController.test()
GET          /test/relation                                     controllers.TestController.relation()

# User Route
GET          /users/:user_id                                    controllers.UserController.get(user_id: String)
GET          /users/change_password/:email/:new_password        controllers.UserController.changePassword(email: String, new_password: String)
GET          /users/:user_id/friends                            controllers.UserController.getFriends(user_id: String)
GET          /users/:user_id/addresses                          controllers.UserController.getAddresses(user_id: String)
POST         /users                                             controllers.UserController.create()
PATCH        /users/:user_id                                    controllers.UserController.update(user_id: String)